# ðŸŒ Environment Variables Configuration
# Complete configuration for your customizable Telegram mini app
# Copy this file to .env and fill in your actual values

# =============================================================================
# ðŸ¤– TELEGRAM BOT CONFIGURATION (Required)
# =============================================================================

# Bot Token from @BotFather (Required)
# Get from: https://t.me/BotFather -> /newbot
# Format: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TG_BOT_TOKEN=your_bot_token_here

# Alternative bot token variable (for compatibility)
# Use the same value as TG_BOT_TOKEN
VITE_TG_BOT_TOKEN=your_bot_token_here

# Bot Username from @BotFather (Required)
# Format: YourApp_Bot (without @)
BOT_USERNAME=YourApp_Bot

# Webhook Security Secret (Recommended)
# Generate a secure random string for webhook validation
# Example: openssl rand -hex 32
TELEGRAM_WEBHOOK_SECRET=your-secure-webhook-secret

# =============================================================================
# ðŸŒ WEB APPLICATION CONFIGURATION (Required)
# =============================================================================

# Your deployed web app URL (Required)
# Used for webhook callbacks, API calls, and fallback URLs
# Format: https://yourapp.vercel.app
VITE_WEB_APP_URL=https://yourapp.vercel.app

# Alternative URL variables (for compatibility)
# Use the same value as VITE_WEB_APP_URL
NEXTAUTH_URL=https://yourapp.vercel.app

# Vercel URL (automatically set by Vercel)
# Format: your-project-git-main-username.vercel.app
# This is automatically set by Vercel deployment
VERCEL_URL=your-project-git-main-username.vercel.app

# =============================================================================
# ðŸ” ADMIN & SECURITY CONFIGURATION (Required)
# =============================================================================

# Admin API Key (Required)
# Used for admin panel authentication and secure operations
# Generate a secure random string: openssl rand -hex 32
ADMIN_API_KEY=your-secure-admin-api-key

# Alternative admin API key variable (for compatibility)
# Use the same value as ADMIN_API_KEY
VITE_ADMIN_API_KEY=your-secure-admin-api-key

# =============================================================================
# ðŸ”¥ FIREBASE CONFIGURATION (Required)
# =============================================================================

# Firebase API Key (Required)
# Get from: Firebase Console -> Project Settings -> General
VITE_FIREBASE_API_KEY=your_firebase_api_key

# Firebase Auth Domain (Required)
# Format: your-project-id.firebaseapp.com
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Project ID (Required)
# Your Firebase project identifier
VITE_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket (Required)
# Format: your-project-id.appspot.com
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Messaging Sender ID (Required)
# Numeric ID from Firebase Console
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012

# Firebase App ID (Required)
# Format: 1:123456789012:web:abcdef123456789
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456789

# Firebase Measurement ID (Optional)
# For Google Analytics integration
# Format: G-XXXXXXXXXX
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# ðŸ’° PAYMENT CONFIGURATION (Optional - OxaPay)
# =============================================================================

# OxaPay Merchant API Key (Optional)
# Used for creating payment invoices
# Get from: https://oxapay.com -> Dashboard -> API Settings
VITE_OXAPAY_MERCHANT_API_KEY=your_oxapay_merchant_api_key

# OxaPay Payout API Key (Optional)
# Used for processing withdrawals/payouts
# Get from: https://oxapay.com -> Dashboard -> Payout Settings
VITE_OXAPAY_PAYOUT_API_KEY=your_oxapay_payout_api_key

# Alternative OxaPay API Key variable (for compatibility)
# Use the same value as VITE_OXAPAY_MERCHANT_API_KEY
OXAPAY_API_KEY=your_oxapay_merchant_api_key

# =============================================================================
# ðŸ“Š ANALYTICS & MONITORING (Optional)
# =============================================================================

# Google Analytics Measurement ID (Optional)
# For detailed analytics tracking
# This can be the same as VITE_FIREBASE_MEASUREMENT_ID
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# ðŸš€ DEPLOYMENT CONFIGURATION
# =============================================================================

# Node Environment (Automatically set by deployment platforms)
NODE_ENV=production

# Vercel Region (Optional)
# Specify deployment region for better performance
# Examples: iad1 (US East), fra1 (Europe), hkg1 (Asia)
VERCEL_REGION=iad1

# =============================================================================
# ðŸ“± MOBILE APP CONFIGURATION (Optional)
# =============================================================================

# App Store URL (Optional)
# Direct link to your app in app stores
APP_STORE_URL=https://apps.apple.com/app/your-app

# Google Play URL (Optional)
GOOGLE_PLAY_URL=https://play.google.com/store/apps/details?id=your.app

